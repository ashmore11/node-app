@keyframes pulse
  0%
    box-shadow: 0px 0px 50px 1px rgba(orangered, 0.25)
    
  50%
    box-shadow: 0px 0px 50px 1px rgba(orangered, 0.45)
    
  100%
    box-shadow: 0px 0px 50px 1px rgba(orangered, 0.25)

#home
  absolute: top left
  width: 100%
  height: 100%
  text-align: center
  
  #scene
    absolute: top 50% left 50%
    transform: translate(-50%,-50%)
    
  .bullet-count
    absolute: bottom 20px right 20px
    color: white
    font-size: 14px
    
  .health
    absolute: bottom 20px left 20px
    color: white
    font-size: 42px
    
    span
      display: block
      
      &:last-child
        font-size: 14px
        margin-top: 5px

  .leaderboard
    absolute: top 20px right 20px
    
    h1
      text-align: right
      margin-bottom: 10px
      padding: 0
      color: white
      font-size: 16px

    ol
      list-style-type: decimal
      
      li
        list-style-type: decimal
        color: white
        text-align: right
        margin-bottom: 5px
        margin-left: 20px
      
  form.username
    width: 300px
    absolute: top 50% left 50%
    transform: translate(-50%, -50%)
    
    h1
      font-size: 30px
      margin-bottom: 10px
      text-transform: uppercase
    
    span
      display    : block
      line-height: 22px
    
    .enter-name
      margin-bottom: 30px
      color: white
      
    .name-criteria
      span
        margin-bottom: 10px
      
    input
      display: block
      margin: 0 auto 40px auto
      height: 60px
      width: 100%
      outline: none
      background-color: rgba( 255,255,255,0.1 )
      color: white
      font-size: 28px
      letter-spacing: 1px
      text-align: center
      text-transform: uppercase
      font-family: 'Oswald', sans-serif
      border: 2px solid #111
      box-shadow: inset 0px 0px 10px 0px rgba( 0,0,0,0.6 )
      text-shadow: 0px 0px 10px rgba( 0,0,0,0.5 )
      
    button
      width: 50%
      height: 50px
      border: 2px solid #222
      border-radius: 10px
      background: linear-gradient( top, #333, #111 )
      color: white
      font-family: 'Oswald', sans-serif
      font-size: 18px
      box-shadow: 0px 0px 20px 0px rgba( 0,0,0,0.6 )
      letter-spacing: 2px
      transition: opacity 0.5s ease-out
      animation: pulse 3s infinite ease-in-out
      outline: none
      cursor: pointer
      
      &:active
        background: linear-gradient( bottom, #222, #111 )
      
      &.disabled
        opacity: 0.3
        animation: none